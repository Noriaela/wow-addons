<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ C:\Projects\WoW\Bin\Interface\FrameXML\UI.xsd">
	<Script file="localization.lua"/>
	<Script file="RogueHelperSE.lua"/>




	<Frame name="RogueHelperScriptFrame" parent="UIParent" hidden="true">
		<Scripts>
			<OnLoad>
				RogueHelper_OnLoad();
			</OnLoad>
			<OnEvent>
				RogueHelper_OnEvent();
			</OnEvent>
		</Scripts>
	</Frame>




	<Button name="RogueHelperFrame" parent="UIParent" hidden="false" enableMouse="true" movable="true">
		<Size>
			<AbsDimension x="88" y="56"/>
		</Size>
		<Anchors>
			<Anchor point="CENTER"/>
		</Anchors>
		<Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" edgeFile="Interface\DialogFrame\UI-DialogBox-Border" tile="true">
			<BackgroundInsets>
				<AbsInset left="11" right="12" top="12" bottom="11"/>
			</BackgroundInsets>
			<TileSize>
				<AbsValue val="32"/>
			</TileSize>
			<EdgeSize>
				<AbsValue val="32"/>
			</EdgeSize>
		</Backdrop>
		<Layers>
			<Layer level="ARTWORK">
				<FontString name="$parentTextUpper" inherits="GameFontNormal" justifyH="CENTER">
					<Anchors>
						<Anchor point="CENTER" relativeTo="$parent">
							<Offset>
								<AbsDimension x="0" y="7"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Scripts>
			<OnLoad>
				RogueHelper_UpdateWindow_OnLoad();
			</OnLoad>
			<OnEvent>
				RogueHelper_UpdateWindow_OnEvent();
			</OnEvent>
			<OnHide>
 				if ( this.isMoving ) then
  					this:StopMovingOrSizing();
  					this.isMoving = false;
 				end
			</OnHide>
			<OnMouseUp>
				if ( this.isMoving ) then
					RogueHelper_UpdateWindow_OnDragStop();
				end
			</OnMouseUp>
			<OnDragStart>
				RogueHelper_UpdateWindow_OnDragStart();
			</OnDragStart>
			<OnDragStop>
				RogueHelper_UpdateWindow_OnDragStop();
			</OnDragStop>
		</Scripts>
	</Button>

</Ui>